<UserControl x:Class="IRInputOverlay.VerticalInputBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="1" Width="24">
  <Grid>
    <Border x:Name="Track" CornerRadius="6" Background="#11000000" BorderThickness="1">
      <Border.BorderBrush>
        <SolidColorBrush Color="#55FFFFFF"/>
      </Border.BorderBrush>
      <Grid ClipToBounds="True">
        <!-- Rounded clip for the fill by using a rounded border as a clip -->
        <Border CornerRadius="6" Background="Transparent"/>
        <Rectangle x:Name="FillRect"
                   VerticalAlignment="Bottom"
                   Height="{Binding ElementName=Track, Path=ActualHeight}"
                   RenderTransformOrigin="0.5,1">
          <Rectangle.Fill>
            <SolidColorBrush Color="White"/>
          </Rectangle.Fill>
          <Rectangle.RenderTransform>
            <ScaleTransform x:Name="Scale" ScaleY="0"/>
          </Rectangle.RenderTransform>
        </Rectangle>
        <TextBlock x:Name="ValueBlock" Text="0" Foreground="White" FontSize="12"
                   HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" Opacity="0.9"/>
      </Grid>
    </Border>
  </Grid>
</UserControl>
