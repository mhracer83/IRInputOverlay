<Window x:Class="IRInputOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Settings" Width="360" Height="250"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Topmost="True">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>  <!-- 0: Opacity -->
      <RowDefinition Height="Auto"/>  <!-- 1: Lock aspect -->
      <RowDefinition Height="Auto"/>  <!-- 2: Bar responsiveness -->
      <RowDefinition Height="Auto"/>  <!-- 3: Wheel image picker (added) -->
      <RowDefinition Height="*"/>     <!-- 4: Spacer -->
      <RowDefinition Height="Auto"/>  <!-- 5: Buttons -->
    </Grid.RowDefinitions>

    <!-- Row 0: Opacity -->
    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
      <TextBlock Text="Background Opacity" Margin="0,0,8,0" VerticalAlignment="Center"/>
      <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Width="220" TickFrequency="10" IsSnapToTickEnabled="True"/>
      <TextBlock x:Name="OpacityValue" Margin="8,0,0,0" Width="30"/>
    </StackPanel>

    <!-- Row 1: Lock aspect -->
    <CheckBox x:Name="LockAspect" Grid.Row="1" Content="Lock Aspect Ratio" Margin="0,10,0,0"/>

    <!-- Row 2: Bar responsiveness -->
    <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0">
      <TextBlock Text="Bar Responsiveness" Margin="0,0,8,0" VerticalAlignment="Center"/>
      <Slider x:Name="BarRespSlider" Minimum="0" Maximum="100" Width="220" TickFrequency="10" IsSnapToTickEnabled="True"/>
      <TextBlock x:Name="BarRespValue" Margin="8,0,0,0" Width="30"/>
    </StackPanel>

    <!-- Row 3: Wheel image picker (moved here) -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
      <TextBlock Text="Wheel image:" Foreground="White" VerticalAlignment="Center" Width="110"/>
      <Button x:Name="ChooseWheelBtn" Content="Chooseâ€¦" Width="90" Margin="6,0,0,0"/>
      <Button x:Name="ClearWheelBtn" Content="Use default" Width="100" Margin="6,0,0,0"/>
      <TextBlock x:Name="WheelPathLabel" Foreground="White" Opacity="0.8"
                 TextTrimming="CharacterEllipsis" Margin="8,2,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <!-- Row 5: Buttons -->
    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button x:Name="ResetBtn" Content="Reset to Defaults" Margin="0,0,8,0" Padding="8,4"/>
      <Button x:Name="CloseBtn" Content="Close" Padding="12,4"/>
    </StackPanel>
  </Grid>
</Window>
